{
  "name": "Event",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false
    },
    "CreateBlock": {},
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Event registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "startTime": {
      "type": "date",
      "required": true
    },
    "endTime": {
      "type": "date",
      "required": true
    },
    "locationText": {
      "type": "string",
      "required": true
    },
    "location": {
      "type": "geopoint"
    }
  },
  "validations": [],
  "relations": {
    "participants": {
      "type": "hasAndBelongsToMany",
      "model": "Member"
    }
  },
  "acls": [],
  "methods": {}
}
