{
  "name": "Topic",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "required": false
    },
    "Stats": [
      {
        "method": "stats",
        "endpoint": "/stats",
        "description": "Statistical information for Topic registers.",
        "type": "model",
        "count": {
          "on": "createdAt",
          "by": "index"
        }
      }
    ]
  },
  "properties": {
    "published": {
      "type": "boolean",
      "default": "false"
    },
    "title": {
      "type": "string"
    },
    "text": {
      "type": "string"
    }
  },
  "validations": [],
  "relations": {
    "blocks": {
      "type": "hasMany",
      "model": "Block"
    },
    "creator": {
      "type": "hasOne",
      "model": "Member"
    }
  },
  "acls": [],
  "methods": {}
}
